{% extends 'layout.njk' %}

{% block head %}
  <title>{{recipe.title}} - Detalhes</title>
{% endblock %}

{% block content %}
  <div class="recipe-detail">
    <div class="recipe-detail__card">
      <img src="{{recipe.image}}" alt="imagem de {{recipe.title}}">
      <div class="recipe-name-author">
        <h2>{{recipe.title}}</h2>
        <p class="author"> por {{recipe.author}}</p>
      </div>
    </div>
    <div class="recipe-detail__content">
      <div class="ingredients">
        <div class="ingredients-header">
          <h3>Ingredientes</h3>
          <button class="btn" value="text" type="button">Esconder</button>
        </div>
        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}}</li>
          {% endfor %}
        </ul>
      </div>
      <div class="preparation">
        <div class="preparation-header">
          <h3>Modo de Preparo</h3>
          <button class="btn" value="text" type="button">Esconder</button>
        </div>
        <div class="about-preparing">
          <p>{{recipe.preparation}}</p>
        </div>
      </div>
      <div class="additional-info">
        <div class="additional-info__header">
          <h3>Informações Adicionais</h3>
          <button class="btn" value="text" type="button">Esconder</button>
        </div>
        <p>{{recipe.information}}</p>
      </div>
    </div>
  </div>
{% endblock %}